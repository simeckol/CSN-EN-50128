<org.eclipse.epf.uma:TaskDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmi:id="-cHWrsURcy-6b6_tvqZDFLg" name=",_2mj54MmwEeiep6WenHc9eQ" guid="-cHWrsURcy-6b6_tvqZDFLg" changeDate="2018-10-06T23:44:10.217+0200">
  <sections xmi:id="_fFejQMmyEeiep6WenHc9eQ" name="Verifikace musí být dokumentována nejméně plánem verifikace softwaru a jednou nebo více (záleží na procesu) zprávami z verifikace." guid="_fFejQMmyEeiep6WenHc9eQ"/>
  <sections xmi:id="_hrVLMMmyEeiep6WenHc9eQ" name="Plán verifikace softwaru musí být napsán, v rámci odpovědnosti verifikátora, na základě potřebné dokumentace." guid="_hrVLMMmyEeiep6WenHc9eQ"/>
  <sections xmi:id="_qkzGQMmyEeiep6WenHc9eQ" name="Plán verifikace softwaru musí popisovat činnosti, které mají být provedeny, aby byla zajištěna náležitá verifikace a že je dostupný vhodný konkrétní návrh nebo další potřeby verifikace pro jejich provedení." guid="_qkzGQMmyEeiep6WenHc9eQ"/>
  <sections xmi:id="_dBGdsMuUEeir883_jylfPA" name="Během vývoje (a v závislosti na velikosti systému) může být plán rozdělen na několik podřízených dokumentů, které budou doplňovány, jakmile začnou být jasnější podrobné potřeby verifikace." guid="_dBGdsMuUEeir883_jylfPA"/>
  <sections xmi:id="_QJL6oMuVEeir883_jylfPA" name="Plán verifikace softwaru musí dokumentovat všechna kritéria, techniky a nástroje, které budou použité v procesu verifikace. Plán verifikace softwaru musí obsahovat techniky a opatření vybrané z Tabulky A.5, Tabulky A.6, Tabulky A.7 a Tabulky A.8. Tato vybraná kombinace musí být odůvodněna a musí vyhovovat 4.8, 4.9 a 4.10." guid="_QJL6oMuVEeir883_jylfPA"/>
  <sections xmi:id="_YnsYAMuVEeir883_jylfPA" name="Plán verifikace softwaru musí popisovat činnosti, které musí být vykonány pro zajištění správnosti a konzistence s ohledem na vstupy do příslušné etapy. To zahrnuje přezkoumání, testování a integraci." guid="_YnsYAMuVEeir883_jylfPA"/>
  <sections xmi:id="_dSUUEMuVEeir883_jylfPA" name="V kažné etapě vývoje musí být prokázáno, že jsou splněny požadavky na funkcionalitu, výkon a bezpečnost." guid="_dSUUEMuVEeir883_jylfPA"/>
  <sections xmi:id="_gxS8YMuVEeir883_jylfPA" name="Výsledky každé verifikace musí být uchovány ve formátu definovaném nebo odkazovaném v plánu verifikace softwaru." guid="_gxS8YMuVEeir883_jylfPA"/>
  <sections xmi:id="_9eiugMuWEeir883_jylfPA" name="Plán verifikace softwaru má určit následující:" guid="_9eiugMuWEeir883_jylfPA">
    <sectionDescription>a) výběr strategií a technik verifikace (aby se předešlo zbytečné složitosti v hodnocení verifikace a testování, přednost&#xD;
se musí dát výběru technik, které jsou samy o sobě snadno analyzovatelné); &#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>b) výběr technik z&#xD;
    Tabulky A.5, Tabulky A.6, Tabulky A.7 a Tabulky A.8;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>c) výběr a dokumentaci&#xD;
    verifikačních činností;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>d) vyhodnocení získaných&#xD;
    výsledků verifikace;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>e) vyhodnocení požadavků&#xD;
    na bezpečnost a robustnost;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>f) role a odpovědnosti&#xD;
    personálu zapojeného do procesu verifikace;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>g) stupeň požadovaného&#xD;
    pokrytí kódu funkčními testy, kterého má být dosaženo;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>h) strukturu a obsah&#xD;
    každého kroku verifikace, zvláště na verifikaci požadavků na software (7.2.4.22), verifikaci&lt;/font>&lt;/font> &lt;font&#xD;
    lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>architektury a návrhu softwaru&#xD;
    (7.3.4.41, 7.3.4.42), verifikaci softwarových komponent (7.4.4.13), verifikaci&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>zdrojového kódu softwaru (7.5.4.10) a verifikaci&#xD;
    integrace (7.6.4.13) a to způsobem, který usnadní&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font&#xD;
    lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>přezkoumání proti plánu verifikace softwaru.&lt;/font>&lt;/font>&#xD;
&lt;/p></sectionDescription>
  </sections>
  <sections xmi:id="_Cp5ZEMuXEeir883_jylfPA" name="Zpráva z verifikace zajištění kvality softwaru musí být napsána, v rámci odpovědnosti verifikátora, na základě vstupních dokumentů z 6.2.2." guid="_Cp5ZEMuXEeir883_jylfPA"/>
  <sections xmi:id="_8Ui4MMukEeiY4aKR2f3NAQ" name="Jakmile se stanoví plán verifikace softwaru, jeho verifikace musí určit" guid="_8Ui4MMukEeiY4aKR2f3NAQ">
    <sectionDescription>&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>a) že plán verifikace&#xD;
    softwaru splňuje obecné požadavky na čitelnosti a sledovatelnost uvedené v článcích 5.3.2.7 až 5.3.2.10 a 6.5.4.14 až&#xD;
    6.5.4.17 jako i konkrétní požadavky uvedené v článcích 6.2.4.3 až 6.2.4.9;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>b) vnitřní konzistenci&#xD;
    plánu verifikace softwaru.&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>Vysledky musí být&#xD;
    zaznamenány ve zprávě z verifikace zajištění kvality softwaru.&lt;/font>&lt;/font>&#xD;
&lt;/p></sectionDescription>
  </sections>
  <sections xmi:id="_TVY9oMulEeiY4aKR2f3NAQ" name="New Step" guid="_TVY9oMulEeiY4aKR2f3NAQ"/>
  <sections xmi:id="_a_YN0MulEeiY4aKR2f3NAQ" name="Jakákoliv zpráva z verifikace softwaru musí být napsána, v rámci odpovědnosti verifikátora, na základě vstupních dokumentů. Tyto zprávy mohou být rozděleny kvůli přehlednosti a pohodlí a musí se řídit plánem verifikace softwaru. Požadavek 6.2.4.13 se týká zpráv z verifikace softwaru. " guid="_a_YN0MulEeiY4aKR2f3NAQ"/>
  <sections xmi:id="_b1yRYMulEeiY4aKR2f3NAQ" name="Každá zprava z verifikace softwaru musí dokumentovat následujicí:" guid="_b1yRYMulEeiY4aKR2f3NAQ">
    <sectionDescription>a) identitu a konfiguraci verifikovaných položek, stejně jako jména verifikatorů; &#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>b) položky, které nevyhovují&#xD;
    specifikacim;&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>c) komponenty, data, struktury a algoritmy špatně&#xD;
    přizpůsobené problému;&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>d) zjištěné chyby nebo&#xD;
    nedostatky;&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>e) splnění nebo odchylky od plánu verifikace&#xD;
    softwaru (v připadě odchylky musí zpráva z verifikace vysvětlit,&lt;/font>&lt;/font>&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>zda je tato odchylka kritická, nebo&#xD;
    ne);&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>f) předpoklady, pokud nějaké&#xD;
    jsou;&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>g) shrnutí výsledků&#xD;
    verifikace.&lt;/font>&lt;/font>&lt;/font>&lt;/font>&#xD;
&lt;/p></sectionDescription>
  </sections>
  <purpose>&lt;ul>&#xD;
    &lt;li>&#xD;
        &lt;div align=&quot;left&quot;>&#xD;
            &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>Cílem verifikace&#xD;
            softwaru je přezkoušet a dospět k názoru založeném na důkazu, že položky výstupu (proces, dokumentace, software&#xD;
            nebo aplikace) určité etapy vývoje splňují požadavky a plány s ohledem&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
            face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>na úplnost, správnost a konzistenci. Tyto&#xD;
            činnosti jsou řízeny verifikátorem.&lt;/font>&lt;/font>&#xD;
        &lt;/div>&#xD;
    &lt;/li>&#xD;
&lt;/ul></purpose>
</org.eclipse.epf.uma:TaskDescription>
