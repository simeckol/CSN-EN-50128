<org.eclipse.epf.uma:TaskDescription xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:org.eclipse.epf.uma="http://www.eclipse.org/epf/uma/1.0.6/uma.ecore" xmlns:epf="http://www.eclipse.org/epf" epf:version="1.5.1" xmi:id="-aJE-CCKmYbrhWQbo9-yXCA" name=",_1UvAQMmdEeioC4xUIHgX5A" guid="-aJE-CCKmYbrhWQbo9-yXCA">
  <sections xmi:id="_SgGU8MmjEeioC4xUIHgX5A" name="Testy prováděné jinými účastníky jako jsou manažer pro požadavky, návrhář nebo implementátor mohou být verifikátorem akceptovány, pokud jsou plně dokumentované a splňují následující požadavky." guid="_SgGU8MmjEeioC4xUIHgX5A"/>
  <sections xmi:id="_WMz3QMmjEeioC4xUIHgX5A" name="Měřící zařízení použité pro testování musí být náležitě kalibrováno. Pro jakékoliv nástroje použité pro testování, hardwarové nebo softwarové se musí prokázat, že jsou vhodné pro tento účel." guid="_WMz3QMmjEeioC4xUIHgX5A"/>
  <sections xmi:id="_apVs8MmjEeioC4xUIHgX5A" name="Testování softwaru musí být dokumentováno prostřednictvím specifikace testu a zprávy z testu tak, jak je definováno dále." guid="_apVs8MmjEeioC4xUIHgX5A"/>
  <sections xmi:id="_c0U90MmjEeioC4xUIHgX5A" name="Každá specifikace testu musí obsahovat následující:" guid="_c0U90MmjEeioC4xUIHgX5A">
    <sectionDescription>&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>a) cíle&#xD;
    testu;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>b) testovací případy,&#xD;
    data použita v testu a očekávané vysledky;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>c) typy testů, které je&#xD;
    třeba provést;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>d) prostředí testu,&#xD;
    nástroje, konfiguraci a programy;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>e) kritéria testu, na&#xD;
    základě kterých bude rozhodnuto o ukončení testu;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>f) kritéria a stupeň&#xD;
    pokrytí kódu testem, kterého bude dosaženo;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>g) role a odpovědnosti&#xD;
    personálu zúčastněného v procesu testování;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>h) požadavky, které jsou&#xD;
    pokryty danou specifikací testu;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>i) výběr a využití&#xD;
    zaízení pro testování softwaru.&lt;/font>&lt;/font>&#xD;
&lt;/p></sectionDescription>
  </sections>
  <sections xmi:id="_JmaEgMmwEeiep6WenHc9eQ" name="Zpráva z testu musí být vytvořena následovně:" guid="_JmaEgMmwEeiep6WenHc9eQ">
    <sectionDescription>&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>a) zpráva z testu musí&#xD;
    uvádět jména testerů, výsledky testu a zda byly splněny cíle testu a kritéria testu, které jsou uvedeny ve specifikaci&#xD;
    testu. Poruchy musí být shrnuty a dokumentovány;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>b) testovací případy a&#xD;
    jejich výsledky musí být zaznamenány, nejlépe ve strojově čitelné formě pro následnou&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot;&#xD;
    size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>analýzu;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>c) testy musí být&#xD;
    opakovatelné a pokud je to možné prováděné automaticky;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>d) skripty testu pro&#xD;
    automatické spuštění testu musí být verifikovány;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>e) identita a konfigurace&#xD;
    všech položek zahrnutých v testu (použitý hardware, použitý software, použité&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>zařízení, kalibrace zařízení, stejně jako&#xD;
    informace o verzi specifikace testu) musí být dokumentovány;&lt;/font>&lt;/font>&#xD;
&lt;/p>&#xD;
&lt;p align=&quot;left&quot;>&#xD;
    &lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>f) musí být poskytnuto&#xD;
    vyhodnocení pokrytí kódu testem a úplnost testu a mají být zaznamenány všechny&lt;/font>&lt;/font> &lt;font lang=&quot;JA&quot; size=&quot;2&quot;&#xD;
    face=&quot;LiberationSans&quot;>&lt;font lang=&quot;JA&quot; size=&quot;2&quot; face=&quot;LiberationSans&quot;>odchylky.&lt;/font>&lt;/font>&#xD;
&lt;/p></sectionDescription>
  </sections>
  <purpose>&lt;ul>&#xD;
    &lt;li>&#xD;
        Cílem testování softwaru, prováděného testerem a/nebo integrátorem, je ověřit chování nebo výkon proti odpovídající&#xD;
        specifikaci testu v rozsahu dosažitelném zvoleným pokrytím testu.&#xD;
    &lt;/li>&#xD;
&lt;/ul></purpose>
</org.eclipse.epf.uma:TaskDescription>
