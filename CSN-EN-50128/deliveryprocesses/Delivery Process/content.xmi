  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-7mrcJQc8EgskQVvSkcXaRQ" name="zprava_z_verifikace_integrace_softwaru,_J3VDg1UoEemV8b7OFrwc1g" guid="-7mrcJQc8EgskQVvSkcXaRQ">
