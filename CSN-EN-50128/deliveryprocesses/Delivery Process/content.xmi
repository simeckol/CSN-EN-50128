  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-HRfxEbePcRHPeJqC9QT6Vw" name="zprava_z_verifikace_navrhu_komponent_softwaru,_J3VDhFUoEemV8b7OFrwc1g" guid="-HRfxEbePcRHPeJqC9QT6Vw">
