  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-wqDz58OAX6KCfXz9WdaSmQ" name="napsani_zpravy_z_testu_integrace_softwaru_hardwaru_7.6.4.7,_cqNIkFS4Eem1G9Q9pbLIvg" guid="-wqDz58OAX6KCfXz9WdaSmQ">
