  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-Oe22EuDvXgTjRyRrDRpYrA" name="zprava_z_verifikace_pozadavku_na_software,_J3VDhVUoEemV8b7OFrwc1g" guid="-Oe22EuDvXgTjRyRrDRpYrA">
