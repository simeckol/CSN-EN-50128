  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-w1L4O_e6TZlAbw2JlaaPjw" name="zprava_z_verifikace_architektury_a_navrhu_softwaru,_J3VDgVUoEemV8b7OFrwc1g" guid="-w1L4O_e6TZlAbw2JlaaPjw">
    <refinedDescription>&lt;ul>&#xD;
    &lt;li>&#xD;
